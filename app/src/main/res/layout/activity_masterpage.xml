<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/pj2"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Masterpage">
<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/logoproject"
    android:layout_alignParentTop="true"
    android:onClick="display"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ALUMNI - CONNECT"
        android:textStyle="italic"
        android:textSize="25sp"
        android:textColor="#f9f2f2"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="LOGIN TO YOUR ACCOUNT"
        android:textColor="#0d0d0d"
        android:id="@+id/button"
        android:background="#49f406"
        android:textSize="15sp"
        android:textStyle="italic"
        android:onClick="display1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
