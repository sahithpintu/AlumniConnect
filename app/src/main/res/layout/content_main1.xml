<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/pj2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main1" tools:context="nnk.com.alumniconnect.MainActivity1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="400dp"
        android:background="@drawable/hm1"
        android:layout_height="358dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="
 Alumni-Connect helps the
 students to communicate with
 their alums and post their
 queries globally. Also, students
 can get in contact with their
 alums personally using their
 Linked In Page. In addition to
 this, the alums can post
 globally if there are any
 vaccancies(InternShips/Jobs)
 available for the students.
 Have a great Connect!!!
"
            android:textSize="23sp"
            android:textColor="#f7f9fa" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Alumni Connect HomePage"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="#f5f7f1f2"
        android:id="@+id/textView31"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to AlumniConnect"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textStyle="italic"
        android:textColor="#f5f9f5f6"
        android:id="@+id/textView35"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
