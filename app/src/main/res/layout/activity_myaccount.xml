<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/pj2"
    tools:context="nnk.com.alumniconnect.Myaccount">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Account"
        android:textSize="35sp"
        android:textColor="#f2f5f5"
        android:textStyle="bold"
        android:id="@+id/textView29"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="If UG Student/Alumni:"
        android:textColor="#f2f5f5"
        android:textSize="20sp"
        android:textStyle="italic"
        android:id="@+id/textView30"
        android:layout_marginBottom="149dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Update to PG Student"
        android:onClick="update"
        android:background="#09ed2f"
        android:id="@+id/button10"
        android:layout_marginTop="54dp"
        android:layout_alignTop="@+id/textView30"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Edit Details"
        android:onClick="display7"
        android:background="#09ed2f"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:onClick="viewEmployee"
        android:background="#09ed2f"
        android:layout_below="@+id/textView29"
        android:layout_alignStart="@+id/button11"
        android:layout_marginTop="75dp" />
    <Button
        android:layout_width="65dp"
        android:layout_height="26dp"
        android:text="Home"
        android:onClick="display8"
        android:background="#09ed2f"
        android:id="@+id/button12"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
